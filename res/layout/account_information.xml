<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="账户信息"
        android:id="@+id/account_1"
        android:textSize="25sp"
        android:background="#F06848"
        android:textStyle="bold"
        android:gravity="center"/>
    <TextView 
        android:paddingLeft="50dp"
        android:paddingRight="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名："
        android:layout_below="@id/account_1"
        android:id="@+id/account_2"
        android:layout_marginTop="50dp"/>
    <TextView 
        android:paddingLeft="50dp"
        android:paddingRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEFD0"
        android:layout_toRightOf="@id/account_2"
        android:layout_below="@id/account_1"
        android:layout_marginTop="50dp"
        android:id="@+id/account_n"
        android:text="fanz"/>
    <TextView 
        android:paddingLeft="50dp"
        android:paddingRight="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码：："
        android:layout_below="@id/account_2"
        android:id="@+id/account_3"
        android:layout_marginTop="10dp"/>
    <TextView 
        android:paddingLeft="50dp"
        android:paddingRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEFD0"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/account_3"
        android:layout_below="@id/account_2"
        android:id="@+id/account_m"
        android:text="jf.leilei@gmail.com"/>
    <TextView 
        android:paddingLeft="50dp"
        android:paddingRight="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机：："
        android:layout_below="@id/account_3"
        android:id="@+id/account_5"
        android:layout_marginTop="10dp"/>
    <TextView 
        android:paddingLeft="50dp"
        android:paddingRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEFD0"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/account_5"
        android:layout_below="@id/account_m"
        android:id="@+id/account_p"
        android:text="jf.leilei@gmail.com"/>
    <TextView 
        android:paddingLeft="50dp"
        android:paddingRight="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱：："
        android:layout_below="@id/account_5"
        android:id="@+id/account_7"
        android:layout_marginTop="10dp"/>
    <TextView 
        android:paddingLeft="50dp"
        android:paddingRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEFD0"
        android:layout_marginTop="10dp"
        android:id="@+id/account_e"
        android:layout_toRightOf="@id/account_7"
        android:layout_below="@id/account_p"
        android:text="jf.leilei@gmail.com"/>
</RelativeLayout>
